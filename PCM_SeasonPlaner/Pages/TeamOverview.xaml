<Page x:Class="PCM_SeasonPlaner.Pages.TeamOverview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:igDP="http://infragistics.com/DataPresenter">
   <Grid SnapsToDevicePixels="True">
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto"/>
         <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <igDP:XamDataGrid Grid.Row="1" x:Name="xdgTeam" FieldLayoutInitialized="xdgTeam_FieldLayoutInitialized">
         <igDP:XamDataGrid.FieldLayoutSettings>
            <igDP:FieldLayoutSettings AllowDelete="False" AllowAddNew="False" HighlightAlternateRecords="True"/>
         </igDP:XamDataGrid.FieldLayoutSettings>
         <igDP:XamDataGrid.FieldSettings>
            <igDP:FieldSettings AllowEdit="False"/>
         </igDP:XamDataGrid.FieldSettings>
      </igDP:XamDataGrid>
   </Grid>
</Page>
   